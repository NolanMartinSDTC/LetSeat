        <td>@Model.ID</td>
        <td>@Model.Name</td>
        <td>@Model.CuisineType</td>
        <td>@Model.Address</td>
        <td>@Model.City</td>
        <td>@Model.State</td>
        <td>@Model.Favorite</td>
    </tr>
</table>
